@{

}

<div class="text-end">
    <a asp-controller="Home" asp-action="UDashBoard" class="btn my-4 backbtn"><i class="bi bi-chevron-left"></i>Back</a>
</div>

<div class="mt-2 px-3 p_body">

    <form asp-action="Profile" >

        @* ---patient info *@
        <div>
            <div class="p-2">
                <h6 class="py-2">Patient Information</h6>
            </div>

            <!-- Patient Contact Information -->
            <div class="row p-2">
                <div class="col-md-6">
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="First name">
                    <span asp-validation-for="FirstName" style="color:red"></span>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last name">
                </div>
            </div>
        </div>

        @* ---patient contact info *@

        <div>
            <div>
                <h6 class="p-2">Patient Contact Information</h6>
            </div>
            <div class="row p-2">
                <div class="col-md-6">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" style="color:red"></span>
                </div>
                <div class="col-md-6 ">
                    <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="(201)555-0123">
                    <span asp-validation-for="PhoneNumber" style="color:red"></span>
                </div>
            </div>
        </div>

        @* ---patient location *@

        <div>
            <div>
                <h6 class="p-2">Patient Location</h6>
            </div>
            <div class="row p-2">
                <div class="col-md-6">
                    <input type="text" asp-for="Street" class="form-control" placeholder="Street">
                    <span asp-validation-for="Street" style="color:red"></span>
                </div>
                <div class="col-md-6 ">
                    <input type="text" asp-for="City" class="form-control" placeholder="City">
                    <span asp-validation-for="City" style="color:red"></span>
                </div>
            </div>
            <div class="row p-2">
                <div class="col-md-6">
                    <input type="text" asp-for="ZipCode" class="form-control" placeholder="Zipcode">
                    <span asp-validation-for="ZipCode" style="color:red"></span>
                </div>
                <div class="col-md-6 ">
                    <input type="text" asp-for="State" class="form-control" placeholder="State">
                    <span asp-validation-for="State" style="color:red"></span>
                </div>
            </div>
        </div>

        @* ---upload photo *@

       

        <div class="p-2 py-4  d-flex gap-2 justify-content-end">
            <input type="submit" class="btn btn-primary">
            <a type="button" class="btn btn-secondary" asp-controller="Home" asp-action="SubAreq">Cancel</a>
        </div>
    </form>
</div>


