    <div class="dashboard-content p-5">
        <h2>Medical History</h2>
        <div class="history-table">
            <table class="table table-borderless mt-4">
                <thead>
                    <tr>
                        <th colspan="3" class="cre-req-row">
                            <a class="btn cre-req" data-bs-toggle="modal" data-bs-target="#exampleModal" style="cursor:pointer">Create New Request</a>
                        </th>
                    </tr>
                    <tr class="d-head">
                        <th scope="col">Create Date ↓</th>
                        <th scope="col">Current Status</th>
                        <th class="dh-third" scope="col">Document</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="p-data">
                            <td class="d-first">  @item.IntDate @item.StrMonth @item.IntYear </td>
                            <td class="d-second">@item.CurrentStatus</td>
                            <td class="d-third"><a class="btn patient-docs" href="~/PatientFiles/@item.FileName" target="_blank">Docs</a></td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Create New Request</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Here, I want to create new request for...</p>
                        <div class="text-center">
                            <a class="btn req-btn1" asp-controller="Home" asp-action="MyRequest"> Me</a>
                            <a class="btn req-btn2" asp-controller="Home" asp-action="SomeElse">Some One Else</a>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn req-btn1">Continue</button>
                        <button type="button" class="btn req-btn2" data-bs-dismiss="modal">Cancle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>